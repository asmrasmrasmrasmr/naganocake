<%= render "public/homes/header" %>

<div class="container">
  <h4 style="background-color:#EEEEEE;color:dark;display:inline">新規会員登録</h4>
  <%= form_with model: @customer, url: customer_registration_path do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
  <br>

    <div class="row form-group">
      <div class="col-sm-2"><%= f.label :名前 %></div>

      <div class="col-sm-1"><%= f.label :last_name,  "　(姓)" %></div>
      <div class="col-sm-2"><%= f.text_field :last_name, placeholder:"令和" %></div>

      <div class="col-sm-1"><%= f.label :first_name, "　(名)" %></div>
      <div class="col-sm-2"><%= f.text_field :first_name, placeholder:"道子" %> </div>
    </div>

    <div class="row form-group">
      <div class="col-sm-2"><%= f.label :フリガナ %></div>

      <div class="col-sm-1"><%= f.label :last_name_kana, "　(セイ)" %></div>
      <div class="col-sm-2"><%= f.text_field :last_name_kana, placeholder:"レイワ" %></div>

      <div class="col-sm-1"><%= f.label :first_name_kana, "　(メイ)" %></div>
      <div class="col-sm-2"><%= f.text_field :first_name_kana, placeholder:"ミチコ" %></div>
    </div>

    <div class="row form-group">
      <div class="col-sm-3"><%= f.label :email, "メールアドレス" %></div>
      <div class="col-sm-9"><%= f.email_field :email, placeholder:"sample@example.com", autofocus: true, autocomplete: "email" %></div>
    </div>

    <div class="row form-group">
      <div class="col-sm-3"><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></div>
      <div class="col-sm-9"><%= f.text_field :postal_code, placeholder:"0000000" %></div>
    </div>

    <div class="row form-group">
      <div class="col-sm-3"><%= f.label :address, "住所" %></div>
      <div class="col-sm-9"><%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0" %></div>
    </div>

    <div class="row form-group">
      <div class="col-sm-3"><%= f.label :phone_number, "電話番号(ハイフンなし)" %></div>
      <div class="col-sm-9"><%= f.text_field :phone_number, placeholder:"0000000000" %></div>
    </div>


    <div class="row form-group">
      <div class="col-sm-3"><%= f.label :password, "パスワード" %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
      <% end %></div>
      <div class="col-sm-9"><%= f.password_field :password, autocomplete: "new-password" %></div>
    </div>

    <div class="row form-group">
      <div class="col-sm-3"><%= f.label :password_confirmation, "パスワード(確認用)" %></div>
      <div class="col-sm-9"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
    </div>

    <div class="form-group offset-3">
      <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  <% end %>

　<br>

  <h4 style="background-color:#EEEEEE;color:dark;display:inline">既に登録済みの方</h4><br><br>

  <%= link_to "こちら", new_customer_session_path %>
  <span>　からログインしてください。</span>
</div>
<%= render "layouts/footer" %>
<%= render "public/homes/header" %>
<div class="container">
  <div class="row mt-5">
    <h4 style="background-color:#EEEEEE;color:dark;display:inline">マイページ</h4>
  </div>
  <div class="row mt-2">
    <h4>登録情報<h4>
      <div class="col lg-3">
        <%= link_to "編集する" , edit_customers_path,class: "btn btn-sm btn-success" %>
      </div>
    </div>
    <div class="col col-lg-8">
    <table class="table table-bordered border-dark">
      <tr>
        <th>氏名</th>
        <td><%= @customer.last_name %><%= @customer.first_name %></td>
      </tr>
      <tr>
        <th>カナ</th>
        <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %>
      </tr>
      <tr>
        <th>郵便番号</th>
          <td><%= @customer.postal_code %></td>
      </tr>
       <tr>
          <th>住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th>電話番号</th>
          <td><%= @customer.phone_number %></td>
        </tr>
        <tr>
          <th>メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
      </div>
    <table>
      <tr>
        <td><h5>配送先</h5>
          <div class="col lg-3">
            <td><%= link_to "一覧を見る", addresses_path, class: "btn btn-sm btn-primary" %></td>
          </div>
        </td>
      </tr>
      <tr>
        <td><h5>注文履歴</h5><td><%= link_to "一覧を見る", orders_path, class: "btn btn-sm btn-primary" %></td></td>
      </tr>
    </table>
    </div>
<%= render "layouts/footer" %>
<%= render "public/homes/header" %>
<div class="container">
<div class="row mt-5">
  <div class="col col-lg-12">
<h4 style="background-color:#EEEEEE;color:dark;display:inline">ショッピングカート</h4>
<div class="d-flex justify-content-end">
  <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete,class: "btn btn-danger" %>
  </div>
  </div>
</div>
<div class="row mt-5">
  <div class="col col-lg-12">
    <table class="table table-bordered border-dark">
      <tr>
        <th>商品名</th>
        <th>単価（税込）</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
      <% @cart_items.each do |cart_item| %>
      <tr>
        <td>
          <% if cart_item.item.image.attached? %>
          <%= image_tag cart_item.item.image, size: "75x50" %>
          <% else %>
          <%= image_tag 'no_image.jpg', size: "75x50" %>
          <% end %>
          <%= cart_item.item.name %>
          </td>
        <td>
          <%= (cart_item.item.taxin_price).to_i %>
        </td>
        <td>
          <%= form_with model: cart_item,url: cart_item_path(cart_item.id),method: :patch,local:true do |f| %>
          <%= f.select :amount, *[1..10] %>
          <%= f.submit "変更",class: "btn btn-sm btn-success" %>
        </td>
        <td>
          <%= (cart_item.item.taxin_price*cart_item.amount).round.to_s(:delimited) %>
        </td>
        <td>
          <%= link_to "削除する",cart_item_path(cart_item.id), method: :delete,class: "btn btn-sm btn-danger" %>
        </td>
      </tr>
      <% end %>
      <% end %>
</table>
</div>
</div>
  <div class="row mt-5">
    <div class="col col-lg-9">
      <%= link_to "買い物を続ける", root_path , class: "btn btn-lg btn-primary" %>
      </div>
      <div class="col col-lg-3">
      <table class="table table-bordered border-dark">
        <tr>
          <th>合計金額</th>
          <td><%= @total.round.to_s(:delimited) %></td>
        </tr>
      </table>
      </div>
  </div>
  <div class="row mt-5">
    <div class="col col-lg-12">
  <div class="d-flex justify-content-center">
    <%= link_to "情報入力に進む", new_order_path, class: "btn btn-lg btn-success" %>
    </div>
    </div>
    </div>
</div>
</div>
<%= render "layouts/footer" %>
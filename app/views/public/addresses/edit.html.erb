<div class="container">
  <div class="row">
    <h4 style="background-color:#EEEEEE;color:dark;display:inline">配送先編集</h4>
  </div>
    <%= form_with model: @address,url: address_path(@address.id),method: :patch, local:true do |f| %>
    <div class="row form-group">
      <div class="col-sm-3"><%= f.label :郵便番号（ハイフンなし） %></div>
      <div class="col-sm-9"><%= f.text_field :postal_code %></div>
    </div>

    <div class="row form-group">
      <div class="col-sm-3"><%= f.label :住所 %></div>
      <div class="col-sm-9"><%= f.text_field :address %></div>
    </div>

    <div class="row form-group">
      <div class="col-sm-3"><%= f.label :宛名 %></div>
      <div class="col-sm-4"><%= f.text_field :name %></div>
      <div class="col-sm-5"><%= f.submit "変更内容を保存", class: "btn btn-success" %></div>
    </div>

      <% end %>
  </div>
<%= render "public/homes/header" %>
<br>
<div class ="container">
  <div class ="row">
    <div class = "col">
      <h4 style="background-color:#EEEEEE;color:dark;display:inline">配送先登録 / 一覧</h4>

      <%= form_with model: @address,url: addresses_path,method: :post,local:true do |f| %>

        <div class="form-group">
        <br>
          <%= f.label :郵便番号（ハイフンなし） %>
          <%= f.text_field :postal_code,placeholder:"0000000" , class: 'form-control book_title' %>
        </div>
        <div class="form-group">
          <%= f.label :住所 %>
          <%= f.text_field :address, placeholder:"東京都渋谷区代々木神園町0-0" , class: 'form-control book_body' %>
        </div>
        <div class="form-group">
          <%= f.label :宛名 %>
          <%= f.text_field :name,placeholder:"令和道子" , class: 'form-control book_body' %>
        </div>
        <div class="form-group">
          <%= f.submit "新規登録",class: 'btn btn-sm btn-success' %>
        </div>
      <% end %>


      <table class="table table-bordered">
        <thead>
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |addresses| %>
          <tr>
            <td><%= addresses.postal_code %></td>
            <td><%= addresses.address %></td>
            <td><%= addresses.name %></td>
            <td>
              <%= link_to "編集する", edit_address_path(addresses.id), class: "btn btn-sm btn-success" %>
              <%= link_to "消去する", address_path(addresses.id), method: :delete,class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<%= render "layouts/footer" %>
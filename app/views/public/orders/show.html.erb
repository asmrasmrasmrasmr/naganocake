<%= render "public/homes/header" %>

<div class="container">
  <h4 style="background-color:#EEEEEE;color:dark;display:inline">注文履歴詳細</h4><br>
  <br><br>
  <tr><th>注文情報</th></tr><br>
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>注文日</th>
        <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
      </tr>
      <tr>
        <th>配送先</th>
        <td><%= @order.full_addresses %></td>
      </tr>
      <tr>
        <th>支払い方法</th>
        <td><%= @order.payment_method_i18n %></td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td><%= @order.status_i18n %></td>
      </tr>
    </thead>
   </table>

  <tr><th>請求情報</th><tr><br>
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>商品合計</th>
        <td><%= @order.total_payment - @order.shipping_fee%></td>
      </tr>
      <tr>
        <th>配送料</th>
        <td><%= @order.shipping_fee %></td>
      </tr>
      <tr>
        <th>ご請求額</th>
        <td><%= @order.total_payment %></td>
      </tr>
     </thead>
   </table>
  <tr><th>注文内容</th><tr><br>
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th>商品</th>
        <th>単価(税込)</th>
        <th>個数</th>
        <th>小計</th>
      </tr>
      <% @order.order_items.each do |order_item| %>
        <tr>
          <td><%= order_item.item.name %></td>
          <td><%= order_item.item.taxin_price.round %></td>
          <td><%= order_item.amount %></td>
          <td><%= order_item.item.taxin_price.round * order_item.amount %></td>
        </tr>
      <% end %>
     </thead>
   </table>

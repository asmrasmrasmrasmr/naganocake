<%= render "public/homes/header" %>

<h4 style="background-color:#EEEEEE;color:dark;display:inline">注文情報入力</h4>
<div class="row mt-3 mb-3"><h5>支払方法</h5></div>
<!--ここのurlは一番下のsubmitに関連する-->
<%= form_with model: @order,url: confirm_orders_path, local:true do |f| %>
<%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
<br>
<%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
<%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
<br>

<div class="row mt-3 mb-3"><h5>お届け先</h5></div>
<table class="table table-borderless">
  <tr>
    <th><%= f.radio_button :full_address, "1" %>ご自身の住所</th>
    <td><%= current_customer.full_address %></td>
  </tr>
  <tr>
    <th><%= f.radio_button :full_address, "2" %>登録済住所から選択</th>
    <td><%= f.collection_select :address_id,current_customer.addresses,:id,:full_address %></td>
  </tr>
  <tr>
    <th><%= f.radio_button :full_address, "3" %>新しいお届け先</th>
    <td><%= f.text_field :postal_code %>
        <%= f.text_field :address %>
        <%= f.text_field :name %>
    </td>
  </tr>
</table>
<!--ここのsubmit→ 上のform_withに記載しているURLへ飛ぶ-->
<div class="d-flex justify-content-center">
<%= f.submit "確認画面へ進む",class: "btn btn-lg btn-primary" %>
</div>
<% end %>
<%= render "layouts/footer" %>
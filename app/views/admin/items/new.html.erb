<%= render "admin/homes/header" %>
<div class="container">
<div class="row mt-5">
    <h4 style="background-color:#EEEEEE;color:dark;display:inline">商品新規登録</h4>
</div>
<%= form_with model: @item, url: admin_items_path do |f| %>
<div class="row mt-5">
  <div class="col col-lg-3"></div>
  <div class="col col-lg-6">
  <table class="table table-borderless">
    <tr>
      <th><%= f.label :商品画像 %></th>
      <td><%= f.file_field :image, accept: "image/*" %></td>
    </tr>
    <tr>
      <th>商品名</th>
      <td><%= f.text_field :name,class: "form-control", placeholder: "商品名" %></td>
    </tr>
    <tr>
      <th>商品説明</th>
      <td><%= f.text_area :explanation,class: "form-control", placeholder: "ここに説明文を記述します" %></td>
    </tr>
    <tr>
      <th>ジャンル</th>
      <td><%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "-- 選択してください --") %></td>
    </tr>
    <tr>
      <th>税抜価格</th>
      <td><%= f.text_field :price,class: "form-control", placeholder: "1000" %></td>
    </tr>
    <tr>
      <th>販売ステータス</th>
      <td><%= f.radio_button :is_active, true %>販売中
          <%= f.radio_button :is_active, false %>販売停止中
      </td>
    </tr>
  </table>
  <div class="d-flex justify-content-center"><%= f.submit "新規登録", class: "btn btn-success" %></div>
  <% end %>
  </div>
  <div class="col col-lg-3"></div>
  </div>
  </div>
</div>
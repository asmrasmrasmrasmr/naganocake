<%= render "admin/homes/header" %>
<h4 style="background-color:#EEEEEE;color:dark;display:inline">商品詳細</h4>
<div class="row">
  <div class="col-3 px-sm-0 mx-auto">
    <%= image_tag @item.get_image(150, 150) %>
  </div>
  <div class="col-9 px-5 px-sm-0 mx-auto">
    <table class="table table-borderless">
      <tr>
        <td>商品名</td>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= @item.explanation %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= @item.genre.name %></td>
      </tr>
      <tr>
        <td>税込価格(税抜価格)</td>
        <td><%= (@item.taxin_price).floor %> (<%= @item.price %>)円</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td>
          <% if @item.is_active == true %>
            販売中
          <% else %>
            販売停止中
          <% end %>
          <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
        </td>
      </tr>
    </table>
  </div>
</div>
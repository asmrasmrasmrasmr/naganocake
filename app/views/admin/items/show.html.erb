<%= render "admin/homes/header" %>
<div class="row mt-3 pl-3">
  <h4 style="background-color:#EEEEEE;color:dark;display:inline">商品詳細</h4>
</div>
<div class="row mt-4">
  <div class="col-3 px-sm-0 mx-auto">
    <%= image_tag @item.get_image(200, 200) %>
  </div>
  <div class="col-5 px-20 mx-auto">
    <table class="table table-borderless">
      <tr>
        <td>商品名</td>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= @item.explanation %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= @item.genre.name %></td>
      </tr>
      <tr>
        <td>税込価格(税抜価格)</td>
        <td><%= (@item.taxin_price).floor %> (<%= @item.price %>)円</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td>
          <% if @item.is_active == true %>
            <div class="text-success">販売中</div>
          <% else %>
            <div class="text-secondary">販売停止中</div>
          <% end %>
        </td>
      </tr>
    </table>
    <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>
  </div>
</div>
<%= render "layouts/footer" %>
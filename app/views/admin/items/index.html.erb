<%= render "admin/homes/header" %>

<h3 style="background-color:#EEEEEE;color:dark;display:inline">商品一覧</h3>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th></th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
    <tr>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item.id)  %></td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <td></td>
      <td>
        <% if item.is_active == true %>
          販売中
        <% else %>
          販売停止中
        <% end %>
      </td>
    <% end %>
  </tbody>
</table>
<%= paginate @items %>
<div class="container my-4">
  <h4 style="background-color:#EEEEEE;color:dark;display:inline">ジャンル一覧・追加</h4>
  <div class="row">
    <div class = my-4>
      <%= form_with model: @genre,url: admin_genres_path do |f| %>
      <%= f.label :name, "ジャンル名"%>
      <%= f.text_field :name %>
      <%= f.submit '新規登録',class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <table class="table">
  <thead class="thead-light">
    <tr>
      <th>ジャンル</th>
    </th>
  </thead>
    <tr>
      <td>
        <% @genres.each do |genre| %>
        <%= genre.name %>
        <%= link_to "編集する",edit_admin_genre_path(genre), class: 'btn btn-success' %>
        <% end %>
      </td>
    </tr>
  </table>
</div>
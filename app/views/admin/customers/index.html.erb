<span class="badge badge-light">会員一覧</span>

<table class="table">
  <thead class="thead-light">
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
    <tr>
      <th><%= customer.id %></th>
      <td><%= link_to admin_customer_path(customer.id) do %>
          <%= customer.last_name %><%= customer.first_name %>
          <% end %>
    </td>
      <td><%= customer.email %></td>
      <td>
        <% if customer.is_deleted == true %>
        <!--trueである場合-->
        有効
        <% else %>
        <!--falseである場合-->
        退会
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
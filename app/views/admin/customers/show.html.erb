<span class="badge badge-light"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</span>

<table class="table table-borderless">
  <thead>
    <tr>
      <th>会員ID</th>
      <td><%= @customer.id %></td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>氏名</th>
      <td><%= @customer.last_name %> <%= @customer.first_name %></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= @customer.postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= @customer.address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @customer.phone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <td><% if @customer.is_deleted == true %>
        <!--trueである場合-->
        有効
        <% else %>
        <!--falseである場合-->
        退会
        <% end %></td>
    </tr>
  </tbody>
</table>

<br>
<%= link_to "編集する",edit_admin_customer_path(@customer), class: 'btn btn-success' %>

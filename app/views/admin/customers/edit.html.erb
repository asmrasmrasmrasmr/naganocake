<%= render "admin/homes/header" %>
<div class="container">

<%= form_with model: @customer,url: admin_customer_path(@customer.id),method: :patch do |f| %>
<div class="row mt-5">
<h4 style="background-color:#EEEEEE;color:dark;display:inline"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集<thead></h4>
</div>
<div class="row mt-3">
<table class="table table-borderless">
  <thead>
    <tr>
      <th>会員ID</th>
      <td><%= @customer.id %></td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th>氏名</th>
      <td><div class="field"><%= f.text_field :last_name %> <%= f.text_field :first_name %></div></td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td><div class="field"><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></div></td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= f.text_field :phone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @customer.email %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <td><%= f.radio_button :is_deleted, false %>有効
          <%= f.radio_button :is_deleted, true %>退会
      </td>
    </tr>
  </tbody>
</table>
</div>
<%= f.submit '変更を保存',class: 'btn btn-success' %>
<% end %>
</div>
<%= render "layouts/footer" %>
<div class="container">
  <h4 style="background-color:#EEEEEE;color:dark;display:inline">注文履歴一覧</h4>
  <table class="table">
  <thead class="thead-light">
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <th><%= order.created_at.strftime('%Y/%m/%d/ %H:%M:%S') %></th>
      <td><%= order.customer.name %></td>
      <td><%= order.order_items.sum(:amount) %></td>
      <td><%= order.status %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
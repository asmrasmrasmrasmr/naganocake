<%= render "header" %>
<div class="container">
  <div class="row mt-5">
  <h4 style="background-color:#EEEEEE;color:dark;display:inline">注文履歴一覧</h4>
  </div>
  <div class="row mt-3">
  <table class="table">
  <thead class="thead-light">
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <th><%= link_to order.created_at.strftime('%Y/%m/%d/ %H:%M:%S'), admin_order_path(order.id) %></th>
      <td><%= order.customer.last_name + order.customer.first_name %></td>
      <td><%= order.order_items.sum(:amount) %></td>
      <td><%= order.status_i18n %></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<%= paginate @orders %>